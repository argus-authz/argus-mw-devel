<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="FILE" class="ch.qos.logback.core.FileAppender"> 
    <file>/tmp/pap-admin_u${effectiveUserId}.log</file>
    <append>true</append> 
    <encoder>
        <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS'Z',UTC} - %level [%logger{0}] - %msg%n</pattern>
    </encoder>    
  </appender>
  
  <logger name="org.apache.axis" level="ERROR"/>
  <logger name="org.glite.authz.pap" level="<%= @log_level %>"/>
  <logger name="org.apache.catalina" level="WARN"/>
  <logger name="org.apache" level="WARN"/>
  <logger name="org.springframework" level="WARN"/>
  <logger name="org.opensaml" level="WARN"/>
  <logger name="org.glite.security.trustmanager" level="ERROR"/>
  <logger name="org.glite.security.util" level="ERROR"/>
  <logger name="com.opensymphony" level="WARN"/>
  <logger name="org.glite.security.util" level="ERROR"/>
  <root level="INFO">
    <appender-ref ref="FILE"/>
  </root>
</configuration>
